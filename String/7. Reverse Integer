# Approach 1: not using reverse()
class Solution:
    def reverse(self, x: int) -> int:
       
        reverse = []
        k = -1 if x < 0 else 1
    
        for i in range(len(str(x*k))):
            reverse.append(str(x*k)[-i-1])
        rx = k* int(''.join(reverse))
        
        if rx < -2**31 or rx > 2**31 - 1: return 0
        else: return rx
